---
interface Props {
  as?: string;
  color?: 'cyan' | 'magenta' | 'amber' | 'green';
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { as: Tag = 'span', color = 'cyan', size = 'md' } = Astro.props;

const colorClasses = {
  cyan: 'neon-cyan',
  magenta: 'neon-magenta',
  amber: 'neon-amber',
  green: 'neon-green'
};

const sizeClasses = {
  sm: 'text-sm',
  md: 'text-md',
  lg: 'text-lg',
  xl: 'text-xl'
};
---

<Tag class:list={['neon-text', colorClasses[color], sizeClasses[size]]}>
  <slot />
</Tag>

<style>
  .neon-text {
    display: inline-block;
    font-family: var(--font-display);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .neon-cyan {
    color: var(--color-cyan);
    text-shadow: var(--glow-cyan);
  }

  .neon-magenta {
    color: var(--color-magenta);
    text-shadow: var(--glow-magenta);
  }

  .neon-amber {
    color: var(--color-amber);
    text-shadow: var(--glow-amber);
  }

  .neon-green {
    color: var(--color-green);
    text-shadow: 0 0 10px rgba(0, 255, 136, 0.5), 0 0 20px rgba(0, 255, 136, 0.3);
  }

  .text-sm {
    font-size: 0.875rem;
  }

  .text-md {
    font-size: 1.25rem;
  }

  .text-lg {
    font-size: 2rem;
  }

  .text-xl {
    font-size: 3rem;
  }
</style>
