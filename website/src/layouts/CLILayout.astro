---
import DocsLayout from './DocsLayout.astro';
import NeonText from '../components/NeonText.astro';

const { frontmatter } = Astro.props;
const title = frontmatter.title || 'CLI Reference';
---

<DocsLayout title={title}>
  <article class="doc-page">
    <div class="cli-content">
      <slot />
    </div>
  </article>
</DocsLayout>

<style is:global>
  .cli-content h2:first-child {
    font-family: var(--font-display);
    font-size: 1.5rem;
    margin: 0 0 1rem;
    color: var(--color-amber);
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .cli-content h2:first-child::before {
    content: '';
    width: 24px;
    height: 24px;
    background-image: url("data:image/svg+xml,%3Csvg width='16' height='16' viewBox='0 0 24 24' fill='none' stroke='%2300fff9' stroke-width='2' xmlns='http://www.w3.org/2000/svg'%3E%3Cpolyline points='4 17 10 11 4 5'%3E%3C/polyline%3E%3Cline x1='12' y1='19' x2='20' y2='19'%3E%3C/line%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: center;
    background-size: 20px;
    flex-shrink: 0;
  }

  .cli-content h3 {
    font-family: var(--font-display);
    font-size: 1.2rem;
    margin: 1.5rem 0 0.75rem;
    color: var(--color-cyan);
  }

  .cli-content code {
    font-family: var(--font-mono);
    background: var(--bg-tertiary);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
    color: var(--color-amber);
  }

  .cli-content pre {
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 1rem 1.5rem;
    overflow-x: auto;
    margin: 1rem 0;
  }

  .cli-content pre code {
    background: transparent;
    padding: 0;
    color: var(--text-primary);
  }

  .cli-content p {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .cli-content ul, .cli-content ol {
    color: var(--text-secondary);
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .cli-content li {
    margin-bottom: 0.5rem;
  }

  .cli-content a {
    color: var(--color-cyan);
  }

  .cli-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.9rem;
  }

  .cli-content th,
  .cli-content td {
    padding: 0.75rem 1rem;
    text-align: left;
    border: 1px solid var(--border-color);
  }

  .cli-content th {
    background: var(--bg-tertiary);
    color: var(--color-cyan);
    font-family: var(--font-display);
    font-weight: 600;
  }

  .cli-content td {
    background: var(--bg-secondary);
    color: var(--text-secondary);
  }
</style>

<style>
  .doc-page {
    max-width: 900px;
    margin: 0 auto;
  }

  .doc-header {
    margin-bottom: 2rem;
  }

  .cli-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--color-cyan);
    color: var(--color-cyan);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-family: var(--font-display);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
</style>
